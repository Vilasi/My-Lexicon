<%- include('partials/head.ejs') %> 
  <body>
    <%- include('partials/nav') %> 
    <main class="index container vh-100 d-flex flex-column justify-content-center align-items-center">
      <h1 class="display-1">
        <p
          class="typewrite"
          data-period="2000"
          data-type='[ "Welcome to My Lexicon!", "Improve Your Vocabulary.", "Learn Through Practice.", "Develop Lifelong Skills." ]'
        >
          My Lexicon
        </p>
      </h1>

      <form class="w-75" id="searchbar" method="get" action="http://localhost:3000/words/definition">
        <div class="input-group">
          <input
            id="word"
            type="text"
            class="form-control"
            placeholder="Enter Word to Learn"
            aria-label="Enter a word"
            aria-describedby="addButton"
            name="word"
            spellcheck="true"
            required
          />
          <button
            class="btn btn-outline-secondary searchbar-button"
            type="submit"
            id="search"
          >
            Practice
          </button>
        </div>
      </form>
    </main>
    <!-- Typewrite Effect Script -->
    <script src="/js/bootstrap/bootstrap.min.js" defer></script>
    <script src="/js/typewriter.js" defer></script>
    <script  src="/js/index/app.js" defer></script>
  </body>
</html>
